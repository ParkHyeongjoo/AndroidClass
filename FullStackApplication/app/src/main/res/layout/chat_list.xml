<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgChat"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/tvChatOtherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="조자연"
        app:layout_constraintStart_toEndOf="@+id/imgChat"
        app:layout_constraintTop_toTopOf="@+id/imgChat" />

    <TextView
        android:id="@+id/tvChatOtherMsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="80dp"
        android:text="안녕하세요. 저는 조자연입니다. 노트북 날려 먹었습니다.ㅁㅇㄴㄹㄹ이ㅏㄻㅇ나ㅓㅁㄹㄴㅇㅇㄴㄹ미ㅓㅏㄴㅇㅁㄹㅁㄴㄹ이ㅏㄹㅇㅁ니ㅏㅓㄴㅁㅇ리ㅏㅁㅇㄴ리ㅏㅇㅁㄴㄹㄹㅇㅁ니ㅏㅠㅇㄴㄹ미ㅏㅠㄴㅇㄹ마ㅣㅠㅁ인ㄹ"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgChat"
        app:layout_constraintTop_toBottomOf="@+id/tvChatOtherName" />

    <TextView
        android:id="@+id/tvChatMyMsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="8dp"
        android:text="ㅁㄴㅇㄹㄴㅇㄹ마ㅠㄴ라ㅕ듀녀ㅏ륜ㅁ뎔듄며ㅏㅠㄴㄷ며ㅏ류ㅕㅏㄴㄷ류ㅕㅏㄴㅁㄷ류ㅏ뉼ㄴ마ㅕㄷ렴단ㅁ라ㅕㄴ뮤다류ㅕㅁ낟류ㅕ뉴ㅕㅏ마ㅕㄹㄴ마류마녇ㄹㄹㅇㅁ뉴ㅣㄴ류ㅣ낭류ㅏㅣㅁ늉리ㅏㄴ뮹란ㅇ뮤ㅏㄹ"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>